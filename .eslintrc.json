{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": ["off", "windows"],
        "indent": ["off", 2],
        "arrow-parens": ["error", "as-needed"],
        "comma-dangle": ["off", "never"],
        "eol-last": ["off", "always"],
        "max-len": ["off", { "code": 80 }],
        "no-param-reassign": "warn"
    }
}
